{
  "ConnectionStrings": {
    "LashStudioConnection": "Server=PROD-SQL-SERVER;Database=LashStudio;User Id=app_user;Password=STRONG_PASSWORD;TrustServerCertificate=True;MultipleActiveResultSets=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Name=LashStudioConnection",
          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "useSqlLogTableCreator": true,
          "batchPostingLimit": 50,
          "period": "00:00:05",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  }
}
